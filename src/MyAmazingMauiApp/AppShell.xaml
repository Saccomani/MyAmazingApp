<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyAmazingMauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyAmazingMauiApp"
    Title="MyAmazingMauiApp"
    Shell.BackgroundColor="#7f5176"
    Shell.FlyoutBehavior="Flyout"
    Shell.TitleColor="White">


    <Shell.FlyoutHeader>
        <StackLayout HeightRequest="100">
     
        </StackLayout>
    </Shell.FlyoutHeader>
    <FlyoutItem>
        <ShellContent
            Title="Produtos"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </FlyoutItem>


    <MenuItem Text="Sobre nÃ³s" />
    <MenuItem Text="Redes Sociais" />
    <MenuItem Text="Tutoriais" />
    <MenuItem Text="Comunicar problema" />


    <Shell.MenuItemTemplate>
        <DataTemplate>
            <Grid ColumnDefinitions="0.1*,0.9*">
                <Image
                    Margin="5"
                    HeightRequest="45"
                    Source="{Binding Icon}" />
                <Label
                    Grid.Column="1"
                    FontFamily="Regular"
                    Text="{Binding Text}"
                    TextColor="#51334e"
                    VerticalTextAlignment="Center" />
            </Grid>
        </DataTemplate>
    </Shell.MenuItemTemplate>

</Shell>
